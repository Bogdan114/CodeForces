#include <iostream>
#include <string>
using namespace std;
int main()
{
	int n, sum = 0;;
	cin >> n;
	string a = "TCODI";
	string b;
	for (int i = 0; i < n; i++)
	{
		cin >> b;
		if (b[0] == a[0])
			sum = sum + 4;
		if (b[0] == a[1])
			sum = sum + 6;
		if (b[0] == a[2])
			sum = sum + 8;
		if (b[0] == a[3])
			sum = sum + 12;
		if (b[0] == a[4])
			sum = sum + 20;
	}
	cout << sum;
}
